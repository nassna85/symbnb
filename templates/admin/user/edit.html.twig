{% extends 'admin/base.html.twig' %}

{% block title %}Modification de l'utilisateur nÂ°{{ user.id }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Modification de l'utilisateur <em>{{ user.fullName }}</em></h1>

        {{ form_start(form) }}

        <div class="alert alert-light">

            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.firstName) }}
                    {{ form_row(form.lastName) }}
                    {{ form_row(form.email) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.picture) }}
                    {{ form_row(form.introduction) }}
                    {{ form_row(form.description) }}
                </div>
            </div>
            <button type="submit" class="btn btn-success">
                <i class="fas fa-check"></i>
                Enregistrer les modifications
            </button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}